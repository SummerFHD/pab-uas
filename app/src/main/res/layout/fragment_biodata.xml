<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFILE PRIBADI"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />

    <!-- Header Profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/foto_profil"
            android:layout_gravity="center"
            android:contentDescription="Foto Profil"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA: Andi Muhammad Nauval Ramadhan"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTTL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir: 12 November 2004"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTempatLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir: Jakarta"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvWA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor WA: 082167004112"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tombol Pilihan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnPendidikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pendidikan"
            android:layout_margin="4dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnKeahlian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Keahlian"
            android:layout_margin="4dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnPengalaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pengalaman"
            android:layout_margin="4dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Garis Pemisah -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginBottom="8dp" />

    <!-- Container Fragment untuk Tabel -->
    <FrameLayout
        android:id="@+id/fragment_tabel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
